{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "patternProperties": {
        "^[A-Za-z][A-Za-z0-9_]*$": {
            "type": "object",
            "properties": {
                "manifestations": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "abilities": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "traitAffinities": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z][A-Za-z0-9_]*$": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        }
                    }
                },
                "environmentAffinities": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z][A-Za-z0-9_]*$": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        }
                    }
                },
                "compatibleThemes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "incompatibleThemes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "manifestations",
                "abilities"
            ]
        }
    }
}